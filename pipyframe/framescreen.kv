#:kivy 1.8.0
<FrameScreen>
    CarouselViewer:
        id:car_viewer
        auto_bring_to_front: False
    ClockViewer:
        id:clock_viewer
        auto_bring_to_front: True
        pos:(root.width - ctimer_label.width - 120, 20)
        size_hint:(None,None)
        Label:
            id: ctimer_label
            markup:True
            font_name:'../docs/fonts/londrinasolid/LondrinaSolid-Regular.ttf'
            size: self.texture_size
            text:clock_viewer.ctimer_text
    WeatherViewer:
        id:weather_viewer
        auto_bring_to_front: True
        pos:(60,10)
        size_hint:(None,None)
        size:(180,180)
        Label:
            id: cweather_label
            markup:True
            size:self.texture_size
            text:weather_viewer.weather_text
            font_name:'../docs/fonts/londrinasolid/LondrinaSolid-Regular.ttf'
            pos:(0, -weather_viewer.height/2 + 20)
        Image:
            id: weather_image
            pos:(0,0)
            source:weather_viewer.weather_icon
